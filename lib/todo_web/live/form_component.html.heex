<div>
  <.form
    :let={f}
    for={@changeset}
    id="item-form"
    phx-target={@myself}
    phx-change="validate"
    phx-submit="create_item"
  >
    <%= label(f, :text) %>
    <%= text_input(f, :text) %>
    <%!-- <%= error_tag(f, :text) %> --%>
    <%= submit("Add Item", phx_disable_with: "Adding...") %>
  </.form>
</div>
