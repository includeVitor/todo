<div>
  <ul>
    <%= for item <- @items do %>
      <li id={"item-#{item.id}"}>
        <%= checkbox(:item, :completed,
          id: "item_completed-#{item.id}",
          phx_click: "toggle_item",
          phx_value_id: item.id,
          phx_target: @myself,
          value: item.completed
        ) %>
        <p
          class={"#{item_completed?(item)}"}
          phx-click="toggle_item"
          phx-value-id={item.id}
          phx-target={@myself}
        >
          <%= item.text %>
        </p>
        <button phx-click="delete_item" phx-value-id={item.id} phx-target={@myself}>
          Delete
        </button>
      </li>
    <% end %>
  </ul>
</div>
